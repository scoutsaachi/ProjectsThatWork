<% if admin_signed_in? || user_signed_in? %>

<div class="page-header">
	<h1>Create an implementation of the project <%=@project.project_name %></h1>
</div>

<%= semantic_form_for @project_instance, url: {:controller => "request", :action => "createProjectInstance", id: @project.id} do |pi| %>
	<div class="projectInputs">
		<%= render :partial => "projectinstancefields", :locals => {:pi => pi} %>

	<%= pi.action :submit, :as => :button %>
<% end %>

<% else %>
<h4> You need to login to see this page! </h4>
<% end %>