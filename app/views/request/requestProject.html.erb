<% if admin_signed_in? || user_signed_in? %>

<div class="page-header">
	<h1>Create a Project Request</h1>
</div>

<%= semantic_form_for @project, url: {:controller => "request", :action => "createProject"} do |f| %>
	<div class="projectInputs">
	<%= render :partial => "projectfields", :locals => {:f => f} %>

	<%= f.semantic_fields_for :project_instances do |pi| %>
		<%= render :partial => "projectinstancefields", :locals => {:pi => pi} %>
	<% end %>

	<%= f.action :submit, :as => :button %>
<% end %>


<% else %>
<h4> You need to login to see this page! </h4>
<% end %>